<script>
    function logout() {
        degoiapi.logout(
            (response) => window.location.replace("@Url.Action("Login", "Account")")
        );
    }
    window.onunload = () => {
        signalr.chatHub.stop();
    }
    window.onload = () => {
        ajax.assign();
    }
</script>