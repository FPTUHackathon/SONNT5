@section head {
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Homepage.css">
    <script src="~/Scripts/Homepage.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/Scripts/ajaxload.js"></script>
    <script src="~/Scripts/adapter.js"></script>
    <script src="~/Scripts/signalr.js"></script>
    <script>
        var user;
        degoiapi.userInfo(
            (response) => {
                user = response;
                $("#username").text(user.Email);
                loadingDone();
            },
            (jqXHR, textStatus, errorThrown) => window.location.replace("@Url.Action("Login", "Account")")
        );
        window.onpopstate = () => {
            ajax.load(document.location.href);
        }
    </script>
}

