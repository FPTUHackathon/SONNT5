<div id="chat-slidebar" class="chat-sidebar">
</div>
<div id="video-call" class="video-call">
    <video id="friend-cam" class="friend-cam" style="background-color:green;" autoplay></video>
    <video id="my-cam" class="my-cam" autoplay muted></video>

    <div id="video-chat-box" class="chat-box">
        <div class="chatbox-messages">
            <ul>
                <li>
                    <span class="left">Hello</span>
                    <div class="clear"></div>
                </li>
                <li>
                    <span class="left">Are you there</span>
                    <div class="clear"></div>
                </li>
                <li>
                    <span class="right">Hello</span>
                    <div class="clear"></div>
                </li>
                <li>
                    <span class="right">I am here</span>
                    <div class="clear"></div>
                </li>
                <li>
                    <span class="left">How are you today?</span>
                    <div class="clear"></div>
                </li>
                <li><span class="right">I am fine, Thankyou</span>
                    <div class="clear"></div>
                </li>
            </ul>
        </div>
        <div class="input-box">
            <textarea placeholder="Enter message"></textarea>
            <a class="btn-addimage" href="#"></a> &nbsp
            <a class="btn-addfile" href="#"></a>
        </div>
    </div>

    <div id="video-control" class="video-control">
        <button type="button" onclick="disableVideo()" id="disableVideoBtn"><i class="btn-disable-video"></i></button>
        <button type="button" onclick="muted" id="mutedBtn"><i class="btn-muted"></i></button>
        <button type="button" id="endCallBtn"><i class="btn-end-call"></i></button>
        <button type="button" onclick="exitFullScreen()" id="exitFullScreenBtn"><i class="btn-exit-fullscreen"></i></button>
    </div>
    <button type="button" id="full-screen" onclick="openFullScreen()" name="button"><i class="btn-fullscreen"></i></button>
</div>


