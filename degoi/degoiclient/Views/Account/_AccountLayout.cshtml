@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head {
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        degoiapi.userInfo(
            (response) => {
                if (localStorage.getItem("token")) window.location.replace("@Url.Action("Index", "Home")")
            },
            (jqXHR, textStatus, errorThrown) => loadingDone()
        );
    </script>
    @RenderSection("head", false)
}

@RenderBody()